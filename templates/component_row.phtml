<div id="<?= $id ?>" class="component_row">
    <div class="component_cell">
        <p class="component_name">
            <a href="/releases/<?= $id ?>/latest" target="_blank"><?= $id ?></a>
        </p>
        <p>(<?= $title ?>)</p>
        <p>
            <a href="<?= $jira->prs ?>" target="_blank">PRs</a> |
            <a href="<?= $jira->crs ?>" target="_blank">CRs</a>
