            ?>
            <p class="specs_item" alt="<?= $spec['tooltip'] ?>">
                <a href="<?= $spec['link'] ?>" target="_blank"><?= $spec['title_short'] ?></a><br/>
                <?= $spec['keywords'] ?>
            </p>
        <?php } ?>
    </div>
    <p class="releases">
        <?php foreach ($releases as $release) {
        ?>
            <a href="<?= $release->getLink() ?>" target="_blank"><?= $release->id ?></a>
