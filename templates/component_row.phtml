                $expr['link'] = $expr['link'] ?? "/releases/{$id}/latest/UML/{$expr['link']}";
            ?>
            <a href="<?= $expr['link'] ?>" target="_blank" title="<?= $expr['description'] ?>"><?= $expr['title'] ?></a><br/>
            <?php }
        } ?>
        </p>
